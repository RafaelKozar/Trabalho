<html>
<head>
    <title>Plataforma Pia Robo</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap core CSS -->
    <link href="http://getbootstrap.com/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="http://getbootstrap.com/assets/js/ie10-viewport-bug-workaround.js"></script>
    <link rel="stylesheet" href="../stylesheets/estilo.css" />
</head>
<body>
    <% include header2.ejs %>      
    
    <div class="col-sm-1 col-md-1 col-lg-1 col-xs-1 "></div>
    <div class="col-sm-12 col-md-10 col-lg-10 col-xs-12 conteudo">
        <div class="panel">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                        <span class="glyphicon glyphicon-file page-header"></span>Lista de Pacientes cadastrados
                    </a>
                </h4>
            </div>
            <% if (typeof message != 'undefined'){ 
               if (message.length > 0) {%>
            <div class="alert alert-succes" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span><%= message %></div>

            <% } } %>

            <div class="bs-example">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-2">Nome</th>
                            
                            <th class="col-md-2">Telefone </th>                            
                            <th class="col-md-1">Editar</th>
                            <th class="col-md-1">Deletar</th>
                            <th class="col-md-1">Atender</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% 
                      if(typeof pacientes != 'undefined'){
                        pacientes.forEach(function(paciente) { %>
                   <tr>
                       <td class="nome"><%= paciente.nome %> </td>
                       <td><%= paciente.telefone %> </td>
                       
                       

                       <td>
                           <button type="button" class="btn btn-default" onclick="location.href = './cadastrarpaciente/<%= paciente._id%>'" aria-label="Left Align">
                               <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                           </button>
                       </td>

                       <td>
                           <button type="button" class="btn btn-default btdeletar" onclick="location.href = './deletarpaciente/<%= paciente._id%>'" aria-label="Left Align">
                               <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                           </button>
                       </td>

                       <td>
                           <% if(typeof paciente.robo != 'undefined' && paciente.robo != null) { %>
                           <button type="button" class="btn btn-default" onclick="location.href = './acessarpaciente/<%= paciente._id %>'" aria-label="Left Align">
                           <% } else { %>
                           <button type="button" class="btn btn-default button" onclick="false" aria-label="Left Align">
                           <% } %>
                               <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                           </button>
                       </td>

                   </tr>
                        <% }); 
                      }  %>
                    </tbody>
                </table>

            </div>


        </div>
    </div>

</body>



</html>
