<body>
    <style>
    body {background-color:#e2e2e2;}
    </style>
    <div class="container" >

        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

        <form class="form-signin" action="/login" method="post" class="form-signin">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">                    
                        <h2 class="form-signin-heading">Plataforma Pia Robo</h2>
                    
                        <label for="inputEmail" class="sr-only">Email address</label>
                        <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Email address" required autofocus>
                        

                    
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" name="password" class="form-control" id="inputPassword" class="form-control" placeholder="Password" required>
                    
                        
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                </div>
                <div class="col-md-4"></div>
            </div>
        </form>    

    </div> 
    
</body>
