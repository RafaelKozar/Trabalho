                                        <script>
                                            function telaInteira() {
                                                var elem = document.getElementById("remote-video");
                                                if (elem.requestFullscreen) {
                                                    elem.requestFullscreen();
                                                } else if (elem.mozRequestFullScreen) {
                                                    elem.mozRequestFullScreen();
                                                } else if (elem.webkitRequestFullscreen) {
                                                    elem.webkitRequestFullscreen();
                                                }
                                            }

                                            function telaInteiraLocal() {
                                                var elem = document.getElementById("local-video");
                                                if (elem.requestFullscreen) {
                                                    elem.requestFullscreen();
                                                } else if (elem.mozRequestFullScreen) {
                                                    elem.mozRequestFullScreen();
                                                } else if (elem.webkitRequestFullscreen) {
                                                    elem.webkitRequestFullscreen();
                                                }
                                            } 
                                        </script>
 
    <div class="row">
        <div class="col-lg-12 col-md-12  col-xs-12  col-sm-12">
            
            <video id="remote-video" class="videoRoboRemote" width="75%" autoplay>Remote</video>               
            
            <video id="local-video" class="videoRoboLocal" width="25%" autoplay>Local</video>
        </div>       

